<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WhiteTitle">
        <item name="android:textSize">@dimen/table_item_title_first_level</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TableItemTitleFirstLevel">
        <item name="android:textSize">@dimen/table_item_title_first_level</item>
        <item name="android:textColor">@color/table_item_title_first_level</item>
    </style>

    <style name="TableItemTitleSecondLevel">
        <item name="android:textSize">@dimen/table_item_title_second_level</item>
        <item name="android:textColor">@color/table_item_title_second_level</item>
    </style>

    <style name="TableItemTitleThirdLevel">
        <item name="android:textSize">@dimen/table_item_title_third_level</item>
        <item name="android:textColor">@color/table_item_title_third_level</item>
    </style>

    <style name="TableItemSectionTitle">
        <item name="android:textSize">@dimen/title_item_font_height</item>
        <item name="android:textColor">@color/table_item_sectiontitle</item>
    </style>

</resources>
