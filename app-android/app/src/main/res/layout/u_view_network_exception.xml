<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/network_exception"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="14dp"
        android:layout_marginBottom="30dp"
        android:textSize="12sp"
        android:textColor="#4c4c4c"
        android:text="@string/network_exception_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnRefreshListView"
        android:width="100dp"
        android:height="40dp"
        android:textSize="12sp"
        android:textColor="#4c4c4c"
        android:background="@drawable/backgroud_radius_grey_less"
        android:text="@string/refresh_button_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>